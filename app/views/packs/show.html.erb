<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/packs">Product Detail</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @pack.product_name %></li>
    </ol>
  </nav>
  <div class="row mt-4">
    <div class="col-6">
      <% if @pack.image.attached? %>
        <img src="<%= url_for(@pack.image) %>" class="img-fluid">
      <% else %>
        <img src="http://via.placeholder.com/640x360?text=No+Image" alt="" class="img-fluid">
      <% end %>
    </div>
    <div class="col-6">
      <h2><%= @pack.product_name %></h2>
      <p><%= @pack.desc %></p>
      <hr>
      <h5>설명</h5>
      <p><%= @pack.company_name %></p>
      <hr>필수 옵션 선택</hr>
      <form action="/carts" method="POST">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      
        <input type="hidden" name="pack_id" value="<%= @pack.id %>">
        
        <div class="form-group">
          <label for="quantity">수량</label>
          <input type="number" name="quantity" value="1" class="form-control">
        </div>
      
        <div class="mt-4">
          <button type="submit" class="btn btn-outline-dark">장바구니 등록</button>
        </div>
      </form>
    </div>
  </div>
</div>